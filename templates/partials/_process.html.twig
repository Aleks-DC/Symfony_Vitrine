{# templates/partials/_process.html.twig #}
<div class="bg-white px-6 py-32 lg:px-8 dark:bg-gray-950">
    <div class="mx-auto max-w-3xl text-base/7 text-gray-700 dark:text-gray-300">

        {% if process.eyebrow is defined %}
            <p class="text-base/7 font-semibold text-indigo-600 dark:text-indigo-400">
                {{ process.eyebrow|default('Introducing') }}
            </p>
        {% endif %}

        {% if process.title is defined %}
            <h1 class="mt-2 text-4xl font-semibold tracking-tight text-pretty text-gray-900 sm:text-5xl dark:text-white">
                {{ process.title|default('JavaScript for beginners') }}
            </h1>
        {% endif %}

        {% if process.lead is defined %}
            <p class="mt-6 text-xl/8">
                {{ process.lead|default('Lead paragraph...') }}
            </p>
        {% endif %}

        <div class="mt-10 max-w-2xl text-gray-600 dark:text-gray-400">

            {% if process.paragraphs is defined and process.paragraphs is iterable %}
                {% for p in process.paragraphs %}
                    <p>{{ p }}</p>
                {% endfor %}
            {% endif %}

            {% if process.checklist is defined and process.checklist is iterable and process.checklist|length > 0 %}
                <ul role="list" class="mt-8 max-w-xl space-y-8 text-gray-600 dark:text-gray-400">
                    {% for item in process.checklist %}
                        <li class="flex gap-x-3">
                            <svg viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" class="mt-1 size-5 flex-none text-indigo-600 dark:text-indigo-400">
                                <path d="M10 18a8 8 0 1 0 0-16 8 8 0 0 0 0 16Zm3.857-9.809a.75.75 0 0 0-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 1 0-1.06 1.061l2.5 2.5a.75.75 0 0 0 1.137-.089l4-5.5Z" clip-rule="evenodd" fill-rule="evenodd" />
                            </svg>
                            <span>
                <strong class="font-semibold text-gray-900 dark:text-white">{{ item.title|default('Item') }}</strong>
                {{ item.text|default('') }}
              </span>
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}

            {% if process.section_after_list is defined %}
                {% if process.section_after_list.title is defined %}
                    <h2 class="mt-16 text-3xl font-semibold tracking-tight text-pretty text-gray-900 dark:text-white">
                        {{ process.section_after_list.title|default('Section title') }}
                    </h2>
                {% endif %}
                {% if process.section_after_list.text is defined %}
                    <p class="mt-6">
                        {{ process.section_after_list.text|default('Section text...') }}
                    </p>
                {% endif %}
            {% endif %}

            {% if process.quote is defined %}
                <figure class="mt-10 border-l border-indigo-600 pl-9 dark:border-indigo-400">
                    {% if process.quote.text is defined %}
                        <blockquote class="font-semibold text-gray-900 dark:text-white">
                            <p>{{ process.quote.text|default('Quote...') }}</p>
                        </blockquote>
                    {% endif %}
                    <figcaption class="mt-6 flex gap-x-4">
                        {% if process.quote.author_avatar is defined %}
                            <img src="{{ process.quote.author_avatar }}" alt="" class="size-6 flex-none rounded-full bg-gray-50 dark:bg-gray-800" />
                        {% endif %}
                        <div class="text-sm/6">
                            {% if process.quote.author_name is defined %}
                                <strong class="font-semibold text-gray-900 dark:text-white">{{ process.quote.author_name|default('Author') }}</strong>
                            {% endif %}
                            {% if process.quote.author_role is defined %}
                                â€“ {{ process.quote.author_role|default('Role') }}
                            {% endif %}
                        </div>
                    </figcaption>
                </figure>
            {% endif %}

            {% if process.post_quote_paragraph is defined %}
                <p class="mt-10">{{ process.post_quote_paragraph|default('Post-quote paragraph...') }}</p>
            {% endif %}

        </div>

        {% if process.figure is defined %}
            <figure class="mt-16">
                <img
                    src="{{ process.figure.src|default('https://images.unsplash.com/photo-1500648767791-00dcc994a43e') }}"
                    alt="{{ process.figure.alt|default('Figure') }}"
                    class="aspect-video rounded-xl bg-gray-50 object-cover dark:bg-gray-800" />
                {% if process.figure.caption is defined %}
                    <figcaption class="mt-4 flex gap-x-2 text-sm/6 text-gray-500 dark:text-gray-400">
                        <svg viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" class="mt-0.5 size-5 flex-none text-gray-300 dark:text-gray-600">
                            <path d="M18 10a8 8 0 1 1-16 0 8 8 0 0 1 16 0Zm-7-4a1 1 0 1 1-2 0 1 1 0 0 1 2 0ZM9 9a.75.75 0 0 0 0 1.5h.253a.25.25 0 0 1 .244.304l-.459 2.066A1.75 1.75 0 0 0 10.747 15H11a.75.75 0 0 0 0-1.5h-.253a.25.25 0 0 1-.244-.304l.459-2.066A1.75 1.75 0 0 0 9.253 9H9Z" clip-rule="evenodd" fill-rule="evenodd" />
                        </svg>
                        {{ process.figure.caption|default('Figure caption') }}
                    </figcaption>
                {% endif %}
            </figure>
        {% endif %}

        {% if process.closing is defined %}
            <div class="mt-16 max-w-2xl text-gray-600 dark:text-gray-400">
                {% if process.closing.title is defined %}
                    <h2 class="text-3xl font-semibold tracking-tight text-pretty text-gray-900 dark:text-white">
                        {{ process.closing.title|default('Closing title') }}
                    </h2>
                {% endif %}
                {% if process.closing.paragraphs is defined and process.closing.paragraphs is iterable %}
                    {% for p in process.closing.paragraphs %}
                        <p class="{{ loop.first ? 'mt-6' : 'mt-8' }}">{{ p }}</p>
                    {% endfor %}
                {% endif %}
            </div>
        {% endif %}

    </div>
</div>
