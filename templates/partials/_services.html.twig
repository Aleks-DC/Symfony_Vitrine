<div class="bg-white py-24 sm:py-32 dark:bg-gray-950">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-2xl sm:text-center">
            {% if services.eyebrow is defined %}
                <h2 class="text-base/7 font-semibold text-indigo-600 dark:text-indigo-400">
                    {{ services.eyebrow|default('eyebrow') }}
                </h2>
            {% endif %}

            {% if services.title is defined %}
                <p class="mt-2 text-4xl font-semibold tracking-tight text-pretty text-gray-900 sm:text-5xl sm:text-balance dark:text-white">
                    {{ services.title|default('Title') }}
                </p>
            {% endif %}

            {% if services.subtitle is defined %}
                <p class="mt-6 text-lg/8 text-gray-600 dark:text-gray-300">
                    {{ services.subtitle|default('Subtitle') }}
                </p>
            {% endif %}
        </div>

    </div>

    <div class="relative overflow-hidden pt-16">
        <div class="mx-auto max-w-7xl px-6 lg:px-8">
            {% if services.screenshots is defined %}
                <img
                    width="{{ services.screenshots.width|default(2432) }}"
                    height="{{ services.screenshots.height|default(1442) }}"
                    src="{{ asset(services.screenshots.src|default('images/clark-tibbs-oqStl2L5oxI-unsplash.jpg')) }}"
                    alt="{{ services.screenshots.alt|default('image') }}"
                    loading="lazy" decoding="async"
                    class="mb-[-12%] rounded-xl shadow-2xl ring-1 ring-gray-900/10 dark:ring-white/10" />
            {% endif %}

            <div aria-hidden="true" class="relative">
                <div class="absolute -inset-x-20 bottom-0 bg-linear-to-t from-white pt-[7%] dark:from-gray-950"></div>
            </div>
        </div>
    </div>

    <div class="mx-auto mt-16 max-w-7xl px-6 sm:mt-20 md:mt-24 lg:px-8">
        <dl class="mx-auto grid max-w-2xl grid-cols-1 gap-x-6 gap-y-10 text-base/7 text-gray-600 sm:grid-cols-2 lg:mx-0 lg:max-w-none lg:grid-cols-3 lg:gap-x-8 lg:gap-y-16 dark:text-gray-400">
            {% for f in services.features|default([]) %}
                <div class="relative pl-9">
                    <dt class="inline font-semibold text-gray-900 dark:text-white">
                        {# Icon as external SVG asset with color via CSS mask #}
                        <span
                            class="absolute top-1 left-1 size-5 text-indigo-600 dark:text-indigo-400 inline-block"
                            aria-hidden="true"
                            style="
                                background-color: currentColor;
                                -webkit-mask: url('{{ asset(f.icon|default('images/icons/photo.svg')) }}') no-repeat center / contain;
                                mask: url('{{ asset(f.icon|default('images/icons/photo.svg')) }}') no-repeat center / contain;
                                ">
            </span>
                        {{ f.title|default('Feature') }}
                    </dt>
                    <dd class="inline">{{ f.text|default('') }}</dd>
                </div>
            {% endfor %}
        </dl>
    </div>
</div>
