{# templates/home.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Aleks DC – Développeur web freelance Symfony{% endblock %}
{% block meta_description %}Création de sites vitrines et web-apps performantes en Pays de la Loire et partout en France.{% endblock %}

{% block body %}
    {# 1. Header (component global) #}
    <twig:Header />

    {# 2. Hero (partial) #}
    {% include 'partials/_hero.html.twig' with { hero: hero } %}

    {# 3. Services / Features (partial) #}
    <section id="services">
        {% include 'partials/_services.html.twig' %}
    </section>

    {# 4. Logo cloud (partial) #}
    {% include 'partials/_logo_cloud.html.twig' %}

    {# 5. Process / Méthode (partial) #}
    <section id="methode" class="">
        {% include 'partials/_process.html.twig' %}
    </section>

    {# 6. Stats / KPIs (component – données passées par le contrôleur) #}
    <twig:Stats :items="stats" />

    {# 7. Pricing / Packages (component – facultatif) #}
    <twig:Pricing :tiers="pricing" id="tarifs"/>

    {# 8. Testimonials (component dynamique) #}
    <twig:Testimonials :quotes="testimonials" id="avis"/>

    {# 9. CTA plein écran (partial) #}
    {% include 'partials/_cta.html.twig' %}

    {# 10. Contact form (component live-ready) #}
    <twig:ContactForm id="contact"/>

    {# 11. Footer (component global) #}
    <twig:Footer />
{% endblock %}
