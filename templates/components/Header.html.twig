<header id="site-header"
        data-controller="navbar"
        data-navbar-dialog-id-value="{{ mobile.dialog_id }}"
        data-navbar-lg-breakpoint-value="1024"
        data-navbar-hide-after-value="64"
        data-navbar-reveal-after-value="48"
        data-navbar-min-delta-value="2"
        data-navbar-blur-value="true"
        data-navbar-active-classes-value="border-indigo-600 dark:border-indigo-500 text-gray-900 dark:text-white"
        data-navbar-inactive-classes-value="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 dark:text-gray-300 dark:hover:border-white/20 dark:hover:text-white"
        class="sticky top-0 z-50 bg-transparent translate-y-0 transition-transform duration-500 md:duration-700 ease-in-out will-change-transform">
    <nav aria-label="Global" class="flex items-center justify-between p-6 lg:px-8">
        <div class="flex lg:flex-1">
            <a href="/" class="-m-1.5 p-1.5">
                <span class="sr-only">{{ brand.name }}</span>
                <img src="{{ brand.logo.src }}" alt="{{ brand.logo.alt }}" class="h-8 w-auto" />
            </a>
        </div>

        <div class="flex lg:hidden">
            <button type="button"
                    command="show-modal"
                    commandfor="{{ mobile.dialog_id }}"
                    class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-400">
                <span class="sr-only">Open main menu</span>
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" aria-hidden="true" class="size-6">
                    <path d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" stroke-linecap="round" stroke-linejoin="round" />
                </svg>
            </button>
        </div>

        <div class="hidden lg:flex lg:gap-x-12">
            {% for item in menu %}
                <a href="{{ item.href }}" class="text-sm/6 font-semibold text-white inline-flex items-center border-b-2 border-transparent px-1 pt-1 hover:border-gray-300 hover:text-gray-700 dark:text-gray-300 dark:hover:border-white/20 dark:hover:text-white">
                    {{ item.label }}
                </a>
            {% endfor %}
        </div>

        <div class="hidden lg:flex lg:flex-1 lg:justify-end">
            <a href="{{ auth.login_href }}" class="text-sm/6 font-semibold text-white">
                {{ auth.login_label }} <span aria-hidden="true">&rarr;</span>
            </a>
        </div>
    </nav>

    {# Mobile dialog #}
    <el-dialog>
        <dialog id="{{ mobile.dialog_id }}" class="backdrop:bg-transparent lg:hidden"
                data-controller="slideover">
            <div tabindex="0" class="fixed inset-0 focus:outline-none">
                {# Backdrop animé #}
                <div data-slideover-target="overlay"
                     class="fixed inset-0 z-40 bg-black/50 opacity-0 transition-opacity duration-500 md:duration-700 ease-in-out will-change-opacity"></div>

                {# Panneau animé #}
                <el-dialog-panel
                    data-slideover-target="panel"
                    class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-gray-950 p-6
               sm:max-w-sm sm:ring-1 sm:ring-gray-100/10
               transform translate-x-full transition-transform duration-500 md:duration-700 ease-in-out will-change-transform">
                    <div class="flex items-center justify-between">
                        <a href="#" class="-m-1.5 p-1.5">
                            <span class="sr-only">{{ brand.name }}</span>
                            <img src="{{ brand.logo.src }}" alt="{{ brand.logo.alt }}" class="h-8 w-auto" />
                        </a>
                        <button type="button"
                                command="close"
                                commandfor="{{ mobile.dialog_id }}"
                                class="-m-2.5 rounded-md p-2.5 text-gray-400">
                            <span class="sr-only">Close menu</span>
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" aria-hidden="true" class="size-6">
                                <path d="M6 18 18 6M6 6l12 12" stroke-linecap="round" stroke-linejoin="round" />
                            </svg>
                        </button>
                    </div>

                    <div class="mt-6 flow-root">
                        <div class="-my-6 divide-y divide-gray-500/25">
                            <div class="space-y-2 py-6">
                                {% for item in menu %}
                                    <a href="{{ item.href }}"
                                       command="close"
                                       commandfor="{{ mobile.dialog_id }}"
                                       class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-white hover:bg-white/5">
                                        {{ item.label }}
                                    </a>
                                {% endfor %}
                            </div>
                            <div class="py-6">
                                <a href="{{ auth.login_href }}"
                                   command="close"
                                   commandfor="{{ mobile.dialog_id }}"
                                   class="-mx-3 block rounded-lg px-3 py-2.5 text-base/7 font-semibold text-white hover:bg-white/5">
                                    {{ auth.login_label }}
                                </a>
                            </div>
                        </div>
                    </div>
                </el-dialog-panel>
            </div>
        </dialog>
    </el-dialog>
</header>
