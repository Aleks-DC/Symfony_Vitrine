<!DOCTYPE html>
<html lang="{{ app.request.locale|default('fr') }}" class="scroll-smooth">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">

    {# --------- Titres & descriptions personnalisables --------- #}
    <title>{% block title %}Aleks DC – Développeur web freelance{% endblock %}</title>
    <meta name="description"
          content="{% block meta_description %}Développement de sites et web-apps performants en Pays de la Loire et partout en France.{% endblock %}">
    <link rel="canonical" href="{{ absolute_url(app.request.uri) }}">

    {# --------- Open Graph & Twitter Cards (⟹ partage réseaux) --------- #}
    <meta property="og:type"        content="website">
    <meta property="og:title"       content="{{ block('title') }}">
    <meta property="og:description" content="{{ block('meta_description')|striptags }}">
    <meta property="og:url"         content="{{ absolute_url(app.request.uri) }}">
    <meta property="og:image"       content="{{ asset('images/social-preview.jpg') }}">
    <meta name="twitter:card"       content="summary_large_image">

    {# --------- SEO géographique (optionnel mais utile localement) --------- #}
    <meta name="geo.region"    content="FR-85">
    <meta name="geo.placename" content="Sainte-Flaive-des-Loups">
    <meta name="geo.position"  content="46.636;-1.676">

    {# --------- Structured Data (JSON-LD) --------- #}
    <script type="application/ld+json">
        {
          "@context":"https://schema.org",
          "@type":"Person",
          "name":"Aleksi D.",
          "alternateName":"Aleks DC",
          "jobTitle":"Développeur web freelance",
          "address":{"@type":"PostalAddress","addressLocality":"Sainte-Flaive-des-Loups","addressRegion":"Pays de la Loire","addressCountry":"FR"},
          "areaServed":"FR",
          "url":"{{ absolute_url(path('app_home')) }}"
    }
    </script>

    {# --------- Feuilles de styles (Webpack Encore) --------- #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {# --------- Scripts compilés (Webpack Encore) --------- #}
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}

    {# --------- Hook pour <head> supplémentaire --------- #}
    {% block extra_head %}{% endblock %}

    <style>
        :root { --header-h: 100px; } /* sera mis à jour en JS */
        html { scroll-behavior: smooth; }
        section { display: flow-root; } /* évite les marges qui "remontent" */
        /* transition douce d’apparence (optionnelle) */
        #site-header { transition: transform .3s ease, background-color .3s ease, backdrop-filter .3s ease, box-shadow .3s ease; }
    </style>


</head>

<body class="antialiased text-gray-900 bg-white">
{# ------------------ Contenu (à surcharger) ------------------ #}
{% block body %}{% endblock %}



{# --------- Hook pour scripts additionnels --------- #}
{% block extra_scripts %}{% endblock %}
</body>
</html>
