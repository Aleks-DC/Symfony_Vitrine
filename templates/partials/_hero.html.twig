<div class="relative isolate overflow-hidden -mt-[var(--header-h)] pt-[var(--header-h)]">
    <img
        src="{{ asset(hero.image|default('images/fallback.jpg')) }}"
        alt="{{ hero.image_alt|default('') }}"
        class="absolute inset-0 -z-10 size-full object-cover filter saturate-0 brightness-30 opacity-110" />

    <div class="absolute inset-0 -z-10 bg-gradient-to-tr from-gray-900 to-indigo-400 mix-blend-multiply opacity-70"></div>
    <div aria-hidden="true" class="absolute inset-x-0 -top-40 -z-10 transform-gpu overflow-hidden blur-3xl sm:-top-80">
        <div style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)" class="relative left-[calc(50%-11rem)] aspect-1155/678 w-144.5 -translate-x-1/2 rotate-30 bg-linear-to-tr from-[#ff80b5] to-[#9089fc] opacity-20 sm:left-[calc(50%-30rem)] sm:w-288.75"></div>
    </div>

    <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-2xl py-32 sm:py-48 lg:py-56">
            {% if hero.badge is defined %}
                <div class="hidden sm:mb-8 sm:flex sm:justify-center">
                    <div class="relative rounded-full px-3 py-1 text-sm/6 text-gray-400 ring-1 ring-white/10 hover:ring-white/20">
                        {{ hero.badge.text }}
                        {% if hero.badge.href is defined %}
                            <a href="{{ hero.badge.href }}" class="font-semibold text-indigo-400">
                                <span aria-hidden="true" class="absolute inset-0"></span>{{ hero.badge.label|default('Read more') }} <span aria-hidden="true">&rarr;</span>
                            </a>
                        {% endif %}
                    </div>
                </div>
            {% endif %}

            <div class="text-center">
                <h1 class="text-5xl font-semibold tracking-tight text-balance text-white sm:text-7xl">
                    {{ hero.title ?? 'Titre par défaut' }}
                </h1>

                {% if hero.subtitle is defined %}
                    <p class="mt-8 text-lg font-medium text-pretty text-gray-400 sm:text-xl/8">
                        {{ hero.subtitle }}
                    </p>
                {% endif %}

                <div class="mt-10 flex items-center justify-center gap-x-6">
                    {% if hero.primary_cta is defined %}
                        <a href="{{ hero.primary_cta.href|default('#') }}"
                           class="rounded-md bg-indigo-500 px-3.5 py-2.5 text-sm font-semibold text-white shadow-xs hover:bg-indigo-400 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-500">
                            {{ hero.primary_cta.label|default('Get started') }}
                        </a>
                    {% endif %}

                    {% if hero.secondary_cta is defined %}
                        <a href="{{ hero.secondary_cta.href|default('#') }}" class="text-sm/6 font-semibold text-white">
                            {{ hero.secondary_cta.label|default('Learn more') }} <span aria-hidden="true">→</span>
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <div aria-hidden="true" class="absolute inset-x-0 top-[calc(100%-13rem)] -z-10 transform-gpu overflow-hidden blur-3xl sm:top-[calc(100%-30rem)]">
        <div style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)" class="relative left-[calc(50%+3rem)] aspect-1155/678 w-144.5 -translate-x-1/2 bg-linear-to-tr from-[#ff80b5] to-[#9089fc] opacity-20 sm:left-[calc(50%+36rem)] sm:w-288.75"></div>
    </div>
    <div class="absolute inset-x-0 bottom-0 -z-10 h-24 bg-linear-to-t from-transparent sm:h-32 dark:from-gray-950"></div>
</div>
